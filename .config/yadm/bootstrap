  pdfgrep \
  picom \
  polkit\
  polkit-gnome \
  ruby \
  slock \
  streamlink \
  sxhkd \
  tldr \
  tree \
  variety \
  vim \
  volumeicon \
  xfce4-notifyd \
  xfce4-power-manager \
  xreader \
  xsel \
  xss-lock \
  yay

# install aur packages
yay -S \
  handlr-bin \
  ripgrep

# set fish as default shell
chsh -s /bin/fish
