#!/bin/bash
# if [ "$EUID" -ne 0 ]
# then
#   echo "Please run $0 as root"
#   exit
# fi

bd=/sys/devices/pci0000:00/0000:00:02.0/drm/card*/card*-eDP-1/intel_backlight/brightness
mbd=/sys/devices/pci0000:00/0000:00:02.0/drm/card*/card*-eDP-1/intel_backlight/max_brightness

bdv=$(cat $bd)
mbdv=$(cat $mbd)

echo $i

case $1 in
  up)
    echo $(( bdv + (mbdv / 15 ) )) > $bd
    cat $bd
  ;;
  down)
    echo $(( bdv - (mbdv / 15 ) )) > $bd
    cat $bd
  ;;
  *)
  echo "$bdv"
esac
