#!/usr/bin/env bash

# install manjaro packages
sudo pacman -S \
  alacritty \
  dmenu \
  docker \
  docker-compose \
  feh \
  fish \
  git \
  mpv \
  parcellite \
  pdfgrep \
  ruby \
  slock \
  streamlink \
  tldr \
  tree \
  vim \
  xreader \
  xsel \
  xss-lock \
  yay

# install aur packages
yay -S \
  handlr-bin \
  ripgrep

# install colours
git clone https://github.com/dkeg/crayolo.git ~/crayolo

# set fish as default shell
chsh -s /bin/fish
