#!/usr/bin/env bash

# install manjaro repo packages
sudo pacman -S zsh vim feh slock dmenu xss-lock git trayer parcellite yay docker docker-compose

# install aur packages
yay -S ripgrep

# install nvm
curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.35.3/install.sh | bash

# set zsh as default shell
chsh -s /bin/zsh
